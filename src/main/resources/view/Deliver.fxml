<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="ancDeliver" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.javafx.bakerymanagementsystem.controller.DeliverController">
   <children>
      <VBox layoutX="10.0" layoutY="10.0" prefHeight="400.0" prefWidth="600.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox spacing="10.0">
               <children>
                  <Label prefHeight="39.0" prefWidth="128.0" text="      Deliver Id" />
                  <Label fx:id="lblId" prefHeight="34.0" prefWidth="427.0" />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <Label prefHeight="39.0" prefWidth="127.0" text="      Address" />
                  <TextField fx:id="txtAddress" prefHeight="37.0" prefWidth="431.0" />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <Label prefHeight="39.0" prefWidth="128.0" text="      Order Id" />
                  <TextField fx:id="txtorderId" prefHeight="37.0" prefWidth="433.0" />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <Label prefHeight="39.0" prefWidth="128.0" text="      Deliver Charge" />
                  <TextField fx:id="txtdeliverCharge" prefHeight="40.0" prefWidth="431.0" />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <Label prefHeight="39.0" prefWidth="128.0" text="      Contact" />
                  <TextField fx:id="txtContact" prefHeight="37.0" prefWidth="430.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="70.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#btnResetOnAction" prefHeight="38.0" prefWidth="100.0" style="-fx-background-color: #fab1a0;" text="Reset" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#btnDeleteOnAction" prefHeight="37.0" prefWidth="100.0" style="-fx-background-color: #d63031;" text="Delete" textFill="WHITE" />
                  <Button mnemonicParsing="false" onAction="#btnupdateOnAction" prefHeight="37.0" prefWidth="100.0" style="-fx-background-color: #0984e3;" text="Update" textFill="WHITE" />
                  <Button mnemonicParsing="false" onAction="#btnSaveOnAction" prefHeight="37.0" prefWidth="100.0" style="-fx-background-color: #55efc4;" text="Save" textFill="WHITE" />
               </children>
            </HBox>
            <TableView fx:id="tblDeliver" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn prefWidth="75.0" text="Deliver Id" />
                  <TableColumn prefWidth="75.0" text="Address" />
                  <TableColumn prefWidth="75.0" text="Order Id" />
                  <TableColumn prefWidth="75.0" text="Deliver Charge" />
                  <TableColumn prefWidth="75.0" text="Contact" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
