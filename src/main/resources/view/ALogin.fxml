                  <TextField fx:id="txtUsername" alignment="CENTER" prefHeight="41.0" prefWidth="278.0" promptText="Username" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="45.0" prefWidth="1500.0">
               <children>
                  <PasswordField fx:id="txtPassword" alignment="CENTER" prefHeight="41.0" prefWidth="278.0" promptText="Password" />
               </children>
            </HBox>
            <Button mnemonicParsing="false" onAction="#btnLoginOnAction" prefHeight="41.0" prefWidth="130.0" text="login">
